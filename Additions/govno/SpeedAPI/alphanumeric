    img[1] = {0,0,c,0,0}
    img[2] = {0,c,0,c,0}
    img[3] = {c,0,0,0,c}
    img[4] = {0,0,0,0,0}
    img[5] = {0,0,0,0,0}
  elseif char == "&" then
    img[1] = {0,c,0,0,0}
