    img[4] = {c,0,0,0,c}
    img[5] = {c,c,c,c,c}
  elseif char == "p" or char == "P" then
    img[1] = {c,c,c,c,c}
    img[2] = {c,0,0,0,c}
    img[3] = {c,c,c,c,c}
    img[4] = {c,0,0,0,0}
    img[5] = {c,0,0,0,0}
  elseif char == "q" or char == "Q" then
    img[1] = {c,c,c,c,c}
    img[2] = {c,0,0,0,c}
    img[3] = {c,0,c,0,c}
    img[4] = {c,0,0,c,0}
    img[5] = {c,c,c,0,c}
  elseif char == "r" or char == "R" then
    img[1] = {c,c,c,c,0}
    img[2] = {c,0,0,0,c}
    img[3] = {c,c,c,c,0}
    img[4] = {c,0,0,c,0}
    img[5] = {c,0,0,0,c}
  elseif char == "s" or char == "S" then
    img[1] = {0,c,c,c,c}
    img[2] = {c,0,0,0,0}
    img[3] = {0,c,c,c,0}
    img[4] = {0,0,0,0,c}
    img[5] = {c,c,c,c,0}
  elseif char == "t" or char == "T" then
    img[1] = {c,c,c,c,c}
    img[2] = {0,0,c,0,0}
    img[3] = {0,0,c,0,0}
